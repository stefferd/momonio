extends layout

include mixins/_pageForm

block content
    .content
        .container
            .columns.is-mobile
                .column.is-12
                    .inner_content.columns
                        .column.content__white
                            table.table
                                thead
                                    tr
                                        th Naam
                                        th Slug
                                        th Aangemaakt op
                                        th Door
                                        th Bewerken
                                tbody
                                    if pages.length > 0
                                        each page in pages
                                            tr
                                                td #{page.name}
                                                td #{page.slug}
                                                td(datetime=page.created)= h.moment(page.created).format('DD-MM-YYYY')
                                                td #{page.author.name}
                                                td
                                                    a(href=`/admin/pages/${page.id}` title="Bewerken") Bewerken
                                    else
                                        tr
                                            td(colspan=3) Er zijn nog geen pagina's

block alternate
    .content.content__alternate
        .container
            .columns.is_mobile
                .column.is-10.is-offset-1
                    .inner_content.columns
                        .column.content__white
                            +pageForm()